{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Comment list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Idcomment</th>
                <th>Iduser</th>
                <th>Comment</th>
                <th>Creacomment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('comment_show', { 'id': entity.idComment }) }}">{{ entity.idComment }}</a></td>
                <td>{{ entity.idUser }}</td>
                <td>{{ entity.comment }}</td>
                <td>{% if entity.creaComment %}{{ entity.creaComment|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('comment_show', { 'id': entity.idComment }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('comment_edit', { 'id': entity.idComment }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('comment_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
