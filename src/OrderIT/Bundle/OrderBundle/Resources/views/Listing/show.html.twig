            <tr>

            </tr>

            <tr>
                <th>Crealisting</th>
                <td>{{ entity.creaListing|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('listing') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('listing_edit', { 'id': entity.idListing }) }}">
